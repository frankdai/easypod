{
  "database": {
    "rules": "database.rules.json"
  },
  "emulators": {
    "database": {
      "host": "localhost",
      "port": "9002"
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
